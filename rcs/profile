# Main varibles for my workflow. All the paths depends on this.
	export ETC="$HOME/etc"
	export CODE="$HOME/code"
	export GIT="$HOME/git"
	export SHARE="$HOME/share"
	export BIN="$HOME/bin"
	export TMPS="$HOME/tmps"
	export TMP="$HOME/tmp"
	export PATH="$PATH:$BIN"
	export MANPAPH="$PATH:$SHARE/man"
	export SHMODS="$CODE/modules/sh"

# Man.
	export MANSECT="1:n:l:8:3:0:2:5:4:9:6:7"
	# My man sections which I'll maybe use later.
	export MANSECT="$MANSECT:m"

# Shell chore functions to get preferencable programs.
. $SHMODS/chores/progpref.sh

# General.
	export KEYBOARD_REPEAT_RATE=60
	export KEYBOARD_REPEAT_DELAY=300

# XDG.
	export XDG_CONFIG_HOME="$HOME/.config"

# Locale.
	export LANG="C"
	export LC_CTYPE="ru_RU.UTF-8"

# Wayland.
	export WLC_REPEAT_RATE="$KEYBOARD_REPEAT_RATE"
	export WLC_REPEAT_DELAY="$KEYBOARD_REPEAT_DELAY"

# Xorg.

# Menu.
	export WMENU="`progpref dmenu-wl`"
	export XMENU="`progpref dmenu`"
	export TMENU="`progpref fzf`"

# Lock.
	export XLOCK="`progpref slock`"
	export WLOCK="`progpref swaylock`"

# Editor.
	export EDITOR="`progpref nvim vim vi nano ex`"
	export GIT_EDITOR="$EDITOR"
	export VISUAL="`progpref gvim notepadqq leafpad mousepad adie gedi`"

# Terminal.
	export WTERMINAL="`progpref termite`"
	export XTERMINAL="`progpref st termite`"
# Pager.
	export PAGER="`progpref most less more`"
	export MANPAGER="$PAGER"
	export HELPPAGER="$PAGER -R"

# Less colors
	export LESS_TERMCAP_md=$'\E[01;31m'
	export LESS_TERMCAP_me=$'\E[0m'
	# Underlined
	export LESS_TERMCAP_us=$'\E[01;32m'
	export LESS_TERMCAP_ue=$'\E[0m'
	# Service info
	export LESS_TERMCAP_so=$'\E[01;33m'
	export LESS_TERMCAP_se=$'\E[0m'
	# Blinking color
	export LESS_TERMCAP_mb=$'\E[1;34m'
	export LESS_TERMCAP_me=$'\E[0m'

# Browser.
	export XBROWSER="`progpref waterfox firefox chromium opera midori epiphany jsurf luakit vimb surf`"
	export WBROWSER="`progpref waterfox firefox midori epiphany`"
	export TBROWSER="`progpref links2 links elinks w3m`"

# GCC.
	export C_INCLUDE_PATH="$S/c/modules"

# Perl.
	export PERL5LIB="$S/pl/5/modules"

# Python.
	export PYTHONPATH="$S/py/modules"

# Nethack.
	export NETHACKOPTIONS="boulder:0, color, autodig"
