#!/bin/sh


rpath="$(dirname `realpath $0`)"

rcs="$ETC/rcs"
configs="$ETC/configs"
arg="$@"
. $rcs/profile

mkdir -p "$XDG_CONFIG_HOME"
# Config dir.
for i in $configs/* ; do
	ln -sT $arg "$i" "$XDG_CONFIG_HOME/`basename $i`"
done
# Run commands dir.
for i in $rcs/*  ; do
	ln -sT $arg "$i" "$HOME/.`basename $i`"
done

mkdirs=$(eval "echo $HOME/{mnt,drv,tmp}")
mkdir -p $mkdirs
