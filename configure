#!/bin/sh
# Automatic user configuration installation and updating script.

# Getting profile file to get start variables.
rpath="$(dirname `realpath $0`)"
profile="$rpath/profile"
. $profile

rcs="$ETC/rcs"
configs="$ETC/configs"
arg="$@"

mkdir -p "$XDG_CONFIG_HOME"
# Config dir.
for i in $configs/* ; do
	ln -sT $arg "$i" "$XDG_CONFIG_HOME/`basename $i`"
done
# Run commands dir.
for i in $rcs/*  ; do
	ln -sT $arg "$i" "$HOME/.`basename $i`"
done

mkdirs=$(eval "echo $HOME/{mnt,drv,tmp}")
mkdir -p $mkdirs
