# Query my default IP address only on startup.
[local-ip]
command=hostname -i | awk '{ print $1 }'
interval=once
color=#91E78B

# Fetch the public IP address only on startup
[public-ip]
command=wget -qO - icanhazip.com
interval=once
color=#00dada

# Update time every 5 seconds.
[time]
command=date
interval=5

